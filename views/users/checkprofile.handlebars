                        {{/if}}
                        {{#if conn.connected }}
                            <em>You are connected</em>
                        {{/if}}
                        {{#if conn.requestSent }}
                            <em>Request sent</em>
                        {{/if}}
                        {{#if conn.requestReceieved }}
                            <em>Your response is pending</em>
                        {{/if}}
                     </div>
                     -->
                </div>
               
            </div>

        </div>

	</div>
</div>



