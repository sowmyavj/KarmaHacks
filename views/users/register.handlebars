<!DOCTYPE html>
<head>
  <title>Effugio</title>
</head>
<div class="container">
    <h2 class="well">Register</h2>
    {{#if errors}} 
    {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
    {{/each}} {{/if}}
    <div class="col-lg-12 well">
        <div class="row">
            <form method="post" action="/users/register" id="registrationForm" enctype="multipart/form-data">
                <!-- left column -->
                <div class="col-md-3 form-group">
                    <div class="text-center">
                        <img src="//placehold.it/200" class="avatar img-circle" alt="avatar">
                        {{!-- <img src="http://res.cloudinary.com/effugio/image/upload/w_250,h_200,c_fill,r_20/30f1c907-633f-4ce5-bb2d-7fc62c5b82d4.png" class="avatar img-circle" alt="avatar"> --}}
                        <h3> Upload photo</h3>

                        <input type="file" class="form-control" id="uploadPicture" name="uploadPicture">
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label for="name">Full Name</label>
                            {{!-- <input type="text" class="form-control" placeholder="Full Name" name="name" value="{{ user.name }}"> --}}
                            <input type="text" class="form-control" placeholder="Full Name" name="name" id="name" pattern="[A-Za-z' ]+" title="Only [a-zA-Z] allowed" minlength="2" maxlength="80" value="{{user.name}}">

                        </div>
                        <div class="col-sm-6 form-group">
                            <label for="gender">Gender</label>
                            <select class="custom-select form-control" name="gender" id="gender">
                                {{#multiselect user.gender}}
                                <option value="M">Male</option>
                                <option value="F">Female</option>
                                {{/multiselect}}
                            </select>
                        </div>
                         <div class="col-sm-6 form-group">
                            <label for="isOrganisation">Are you an organisation?</label>
                            <select class="custom-select form-control" name="isOrganisation" id="isOrganisation">
                                {{#multiselect user.isOrganisation}}
                                <option value="0">False</option>
                                <option value="1">True</option>
                                {{/multiselect}}
                            </select>
                        </div>
                    </div>
               
                    <div class="row">
                        <div class="col-sm-4 form-group">
                            <label for="dob">Date of Birth</label>
                            <input class="form-control" id="dob" name="dob" placeholder="MM/DD/YYY" type="text" value="{{ user.dob }}">
                        </div>
                        <div class="col-sm-4 form-group">
                            <label for="location">Location</label>
                            <input type="text" class="form-control" placeholder="Location" pattern="[A-Za-z' ]+" title="Use two or more [a-zA-Z]" id="location" name="location" value="{{ user.location }}">
                        </div>
                        <div class="col-sm-4 form-group">
                            <label for="occupation">Occupation</label>
                            {{!-- <input type="text" class="form-control" placeholder="Occupation" name="occupation" value="{{ user.occupation }}"> --}}
                            <input type="text" class="form-control" placeholder="Occupation" name="occupation" id="occupation" pattern="[a-zA-Z]+[' -,]{0,1}[a-zA-Z]+" minlength="2" maxlength="80" value="{{ user.occupation }}">
                        </div>
                    </div>
                   
                 
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" placeholder="Email" id="email" name="email" value="{{ user.email }}">
                    </div>
                    <div class="form-group">
                         <label for="user_id">Username</label>
                        <input type="text" class="form-control" placeholder="Username" id="user_id" name="user_id" value="{{ user.user_id }}">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" placeholder="Password" id="password" name="password" value="{{ user.password }}">
                    </div>
                    <div class="form-group">
                        <label for="password2">Confirm Password</label>
                        <input type="password" class="form-control" placeholder="Password" id="password2" name="password2" value="{{ user.password2 }}">    
                    </div>
                    {{!-- <button type="button" class="btn btn-lg btn-info">Submit</button> --}}
                    <button id="submit" type="submit" class="btn btn-default">Submit</button>

                </div>
            </form>
        </div>
    </div>
</div>
